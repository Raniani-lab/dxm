<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherited.quality_mobile_test</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="stock" position="inside">
                <h2 class="col-xs-12">Mobile Quality Test Options</h2>
                <div class="row mt16 o_settings_container mb32">

                        <div class="col-xs-12 col-md-4 o_setting_box">
                            <div>
                                <label for="quality_test_op_type"/>
                                <div class="text-muted">
                                    In which operation type will this test appear
                                </div>
                            </div>
                            <div>
                               <field name="quality_test_op_type"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-4 o_setting_box">
                            <div>
                                <label for="graduation_op_type"/>
                                <div class="text-muted">
                                    Re Graduation operation type
                                </div>
                            </div>
                            <div>
                               <field name="graduation_op_type"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-4 o_setting_box">
                            <div>
                                <label for="workshop_op_type"/>
                                <div class="text-muted">
                                   To send devices to workshop
                                </div>
                            </div>
                            <div>
                               <field name="workshop_op_type"/>
                            </div>
                        </div>


                        <div class="col-xs-12 col-md-4 o_setting_box">
                            <div>
                                <label for="new_grade"/>
                                <div class="text-muted">
                                   Grade for new devices
                                </div>
                            </div>
                            <div>
                               <field name="new_grade"/>
                            </div>
                        </div>



                </div>
            </div>
        </field>
    </record>


