<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_reception_adjustment_wizard" model="ir.actions.act_window">
        <field name="name">Reception Adjustment Wizard</field>
        <field name="res_model">reception.adjustment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="reception_adjustment_wizard_view" model="ir.ui.view">
        <field name="name">reception.adjustment.wizard.view</field>
        <field name="model">reception.adjustment.wizard</field>
        <field name="arch" type="xml">
            <form string=" Reception Adjustment Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id" readonly="1"/>
                        </group>
                        <group/>
                    </group>
                    <notebook>
                        <page string="Adjustments">
                            <field name="change_line_ids">
                                <tree editable="bottom" options="{'no_open': True}">
                                    <field name="source_product_id"/>
                                    <field name="product_id"/>
                                    <field name="grade_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
<!-- attrs="{'readonly': [('source_product_id', '!=', False)]}" -->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="run_reception_adjustment"
                                string="Adjust"
                                type="object"
                                class="oe_highlight" />
                    <button special="cancel" name='cancel' string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>