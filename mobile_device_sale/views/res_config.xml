<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherited.quality_mobile_test</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="sale_management" position="inside">
                <h2 class="col-xs-12">Mobile Device Sale Options</h2>
                <div class="row mt16 o_settings_container mb32">

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div>
                            <label for="delivery_op_type"/>
                            <div class="text-muted">
                                Picking type for delivery operations
                            </div>
                        </div>
                        <div>
                           <field name="delivery_op_type"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div>
                            <label for="website_for_sell"/>
                            <div class="text-muted">
                                Website for sell mobile devices
                            </div>
                        </div>
                        <div>
                           <field name="website_for_sell"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div>
                            <label for="mobile_stock_location"/>
                            <div class="text-muted">
                                Default website location for sale
                            </div>
                        </div>
                        <div>
                           <field name="mobile_stock_location"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div>
                            <label for="payment_method_to_negotiate_price"/>
                            <div class="text-muted">
                                Payment method if there is price offered.
                            </div>
                        </div>
                        <div>
                           <field name="payment_method_to_negotiate_price"/>
                        </div>
                    </div>

                </div>
            </div>
        </field>
    </record>

</odoo>