<odoo>

    <template id="label_reception_layout">
        &lt;!DOCTYPE html&gt;
       <html t-att-lang="lang and lang.replace('_', '-')"
              t-att-data-report-margin-top="data_report_margin_top"
              t-att-data-report-header-spacing="data_report_header_spacing"
              t-att-data-report-dpi="data_report_dpi"
              t-att-data-report-landscape="data_report_landscape"
              t-att-web-base-url="web_base_url">
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="initial-scale=1"/>
                <title><t t-esc="title or 'Odoo Report'"/></title>
                <t t-call-assets="web.report_assets_common" t-js="false"/>
                <t t-call-assets="web.assets_common" t-css="false"/>
                <t t-call-assets="web.report_assets_common" t-css="false"/>
            </head>
           <body t-att-class="'container' if not full_width else 'container-fluid'">
                <div id="wrapwrap">
                    <main>
                        <t t-if="not o" t-set="o" t-value="doc"/>
                        <t t-raw="0"/>
                    </main>
                </div>
            </body>
        </html>

    </template>


    <template id="label_reception_document">
        <t t-call="oct_reception.label_reception_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-foreach="range(doc.packages)" t-as="pack">
                <div style="width: 100%; height: 480px; display: inline-block; font-size: 20px; clear: both;">

                    <div style="display: block; width: 20%; text-align: center; float: left; padding: 15px;">
                        <img t-att-src="web_base_url + '/oct_reception/static/image/logo.png'" style="width: 150px;"/>
                    </div>

                    <div style="display: block; width: 70%; float: left; margin-left: 15px; padding: 10px;">
                        <strong>Date:</strong>
                        <span t-field="doc.date_in" t-options='{"format": "dd/MM/yyyy"}'/>
                        <strong style="margin-left: 10px;">Time:</strong>
                        <span t-field="doc.date_in" t-options='{"format": "HH:mm"}'/>
                        <br/>
                        <strong>Carrier:</strong>
                        <span t-field="doc.carrier"/>
                        <br/>
                        <strong>No. Exp:</strong>
                        <span t-field="doc.origin" t-options='{"format": "hh:mm"}'/>
                        <br/>
                        <strong>Provider:</strong>
                        <span t-field="doc.partner_id.display_name"/>
                        <br/>
                        <strong>Note:</strong>
                        <span t-field="doc.note"/>

                    </div>

                    <div style="display: table; width: 100%; margin-top: 20px; float: left;">

                        <div style="display: table-cell; width: 18%; text-align: center; vertical-align: middle; ">
                            <span t-field="doc.name"/>
                        </div>

                        <div style="display: block; width: 10%; float: left; text-align: center; vertical-align: middle;">
                            <img t-att-src="web_base_url + '/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %
                                ('Code128', doc.name, 450, 110)" style="width: 400px; height: 110px;"/>
                        </div>

                        <div style="display: table-cell; width: 25%; vertical-align: middle;">
                            <span><strong>Package: </strong><t t-esc="pack + 1"/> / <t t-esc="doc.packages"/></span>
                        </div>

                        <!--<img t-att-src="web_base_url + '/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %
                    ('Code128', doc.name, 450, 110)" style="width: 450px; height: 110px;"/>
                        <br/>
                        <span t-field="doc.name"/> - <t t-esc="pack + 1"/> / <t t-esc="doc.packages"/>-->

                    </div>
                    <!--<div style="display: block; width: 100%; margin-top: 20px; padding: 15px; float: left;">
                        <strong>Note:</strong>
                        <span t-field="doc.note"/>
                    </div>-->
                    <div style="display: block; width: 95%; margin-top: 10sto0px; padding: 15px; float: left; text-align: center;">
                        <strong>DXM. Dinero por tu m√≥vil S.L.</strong>
                    </div>
                </div>
            </t>
        </t>
    </template>


    <template id="product_reception_label">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="oct_reception.label_reception_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
